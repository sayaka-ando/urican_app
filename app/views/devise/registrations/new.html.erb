<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  
  <h1>新規登録</h1>

  <%= render "devise/shared/error_messages", model: f.object %>

  <div id="form-main">
    <div id="form-div">
      <form class="form" id="form1">
        
        <div class="form-group">
          <label class="form-text">Name</label>
          <%= f.text_field :name, class:"feedback-input", id:"name", placeholder:"例：田中太郎" %>
        </div>
        
        <div class="form-group">
          <label class="form-text">Email</label>
          <%= f.email_field :email, class:"feedback-input", id:"email", placeholder:"○○@urican.jp", autofocus: true %>
        </div>
        
        <div class="form-group">
          <label class="form-text">password</label>
          <%= f.password_field :password, class:"feedback-input", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>

        <div class="form-group">
          <label class="form-text">password(確認)</label>
          <%= f.password_field :password_confirmation, class:"feedback-input", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>

        <div class="form-group">
          <label class="form-text">employee number</label>
          <%= f.text_field :employee_number, class:"feedback-input", id:"password-confirmation", placeholder:"社員番号を入力して下さい(数字４桁)" %>
        </div>
        
        
        <div class="submit">
          <input type="submit" value="SEND" id="button-blue"/>
          <div class="ease"></div>
        </div>
      </form>
    </div>

<% end%>
