<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  
  <h1>ログイン</h1>

  <%= render "devise/shared/error_messages", model: f.object %>

  <div id="form-main">
    <div id="form-div">
      <form class="form" id="form1">
        
        <div class="form-group">
          <label class="form-text">employee number</label>
          <%= f.text_field :employee_number, class:"feedback-input", id:"password-confirmation", placeholder:"社員番号を入力して下さい(数字４桁)" %>
        </div>
        
        <div class="form-group">
          <label class="form-text">password</label>
          <%= f.password_field :password, class:"feedback-input", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>
        
        <div class="submit">
          <input type="submit" value="SEND" id="button-blue"/>
          <div class="ease"></div>
        </div>
      </form>
    </div>

<% end%>
